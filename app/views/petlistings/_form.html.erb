<div class="container">
    <div class="row justify-content-md-center">
        <div class="col align-self-start">
            <h3>Create a new pet listing</h3>
        </div>

        <div class="col align-self-center">
            <% if petlisting.errors.any? %>
                    <% petlisting.errors.full_messages.each do |error| %>
                    <div class="alert alert-warning" role="alert"> <%= error %> </div>
                <%end %>
            <% end %>

            <%= form_with model: petlisting, local: true do |form| %>

            <div class="form-group">
                <%= form.label :name %>
                <br>
                <%= form.text_field :title, value: petlisting.title %>
            </div>

            <div class="form-group">
                <%= form.label :description %>
                <br>
                <%= form.text_area :description, value: petlisting.description %>
            </div>
        <br>

            <div>
                <%= form.label :species_id %>
                <%= form.select(:species_id, species.map{ |s| [s.species, s.id]}) %>
            </div>
        <br>

        <div class="form-group">
                <%= form.label :picture %>
                <br>
                <%= form.file_field :picture, accept: "image/png,image/gif,image/jpeg,image/jpg" %>
            </div>
    
        <br>
            <div>
                <%= form.submit "Submit", class: "btn btn-info" %>
            </div>
        <% end %>
        
        
        
        </div>

        <div class="col"></div>
    </div>
</div>
